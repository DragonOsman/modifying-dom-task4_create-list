{
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "standard", 
      "eslint:recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1,
          "VariableDeclarator": "first"
        }
      ],
      "linebreak-style": [
        "error",
        "windows"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": 0,
      "eqeqeq": [
        "error",
        "always",
        {
          "null": "ignore"
        }
      ],
      "no-implicit-coercion": [
        "error",
        {
          "allow": [
            "!!"
          ]
        }
      ],
      "no-throw-literal": "error",
      "prefer-promise-reject-errors": "error",
      "require-await": "error",
      "camelcase": "error",
      "eol-last": "error",
      "new-cap": "error",
      "no-negated-condition": "warn",
      "no-var": "error",
      "prefer-const": "error"
    }
  }
  